<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commonHPRoot"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25">

        <TextView
            android:id="@+id/commonHPTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="检查更新"
            android:textColor="@color/ff222222"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/commonHPTip"
            app:layout_constraintStart_toStartOf="@+id/commonHProgress"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="59.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在更新中..."
            android:textColor="@color/ff222222"
            android:textSize="@dimen/text_14"
            />
        <ProgressBar
            android:id="@+id/commonHProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_24"
            app:layout_constraintTop_toBottomOf="@+id/commonHPTip"
            android:progressDrawable="@drawable/common_h_progressbar_bg"/>

        <TextView
            android:id="@+id/commonHPNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:text="0%"
            android:textColor="@color/ff999999"
            android:textSize="@dimen/text_12"
            app:layout_constraintEnd_toEndOf="@+id/commonHProgress"
            app:layout_constraintTop_toBottomOf="@+id/commonHProgress" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="@dimen/dp_28"
        android:background="@color/ffeeeeee" />

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_itemicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:src="@mipmap/icon_wifi"
            android:layout_marginStart="@dimen/dp_15"/>

        <TextView
            android:id="@+id/tv_itemname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="@color/ff222222"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/dp_15"
            tools:text="WLAN"/>

        <TextView
            android:id="@+id/tv_itemvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:textColor="@color/ff999999"
            android:textSize="@dimen/sp_14"
            tools:text="TP-LINK-12138"
            android:minWidth="30dp"
            android:minHeight="50dp"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_right_24" />

    </LinearLayout>
</LinearLayout>